<?xml version="1.0"?>
<config>
	<tabs>
        <eternal translate="label">
            <label>Zonda Extensions</label>
            <sort_order>150</sort_order>
        </eternal>
    </tabs>  
    <sections>
        <quickview translate="label" module="quickview">
            <class>separator-top</class>
            <label>Quick View</label>
            <tab>eternal</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <viewsetting translate="label" module="quickview">
                    <label>Quick View Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<enableview translate="label">
                            <label>Enable Quick View</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableview>				
                    </fields>
                </viewsetting>
            </groups>
        </quickview>
    </sections>
</config>
