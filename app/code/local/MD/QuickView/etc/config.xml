<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <MD_QuickView>
            <version>1.2.3</version>
        </MD_QuickView>
    </modules>

    <global>
        <blocks>
            <quickview>
                <class>MD_QuickView_Block</class>
            </quickview>
        </blocks>
        <helpers>
            <quickview>
                <class>MD_QuickView_Helper</class>
            </quickview>
        </helpers>

        <models>
            <quickview>
                <class>MD_QuickView_Model</class>
            </quickview>
        </models>
    </global>
    <adminhtml> 	
		<layout>
			<updates>
				<quickview>
					<file>md_quickview.xml</file>
				</quickview>
			</updates>
		</layout>
    </adminhtml> 
    <frontend>
        <routers>
            <quickview>
                <use>standard</use>
                <args>
                    <module>MD_QuickView</module>
                    <frontName>quickview</frontName>
                </args>
            </quickview>
        </routers>
        <layout>
            <updates>
                <quickview>
                    <file>md_quickview.xml</file>
                </quickview>
            </updates>
        </layout>
    </frontend>
    <default>
        <quickview>
			<viewsetting>
				<enableview>1</enableview>
            </viewsetting>
        </quickview>
    </default>
</config>